{{#if students}}
    <caption for="studentsDD">Select a student:</caption>
    <select id="studentsDD">
        <option value=""></option>
        {{#each students}}
            <option value="{{studentId}}"> {{name}}</option>
        {{/each}}
    </select>
{{/if}}

<div id="studentDetails"></div>

